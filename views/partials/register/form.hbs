{{!--
    REGISTER SECTION: FORM
--}}
<section id="register">
    <div class="container">
        <div class="row">
            <div class="registration-title">
                <h2>Inscription</h2>
            </div>
            <form action="/register" method="post" class="connection d-flex align-items-center flex-column">
            {{#if usedName }}
            <h5>Nom d'utilisateur déjà pris!</h5>
            {{/if }}
            {{#if usedEmail }}
            <h5>Email déjà utilisée!</h5>
            {{/if }}
            {{#if failPassword }}
            <h5>Les mots de passes ne correspondent pas!</h5>
            {{/if }}
                <div class="mb-3 element-form">
                    <label for="input-username" class="form-label">Nom d'utilisateur</label>
                    <input required type="text" class="form-control" id="input-username" name="name">
                </div>
                <div class="mb-3 element-form">
                    <label for="input-email" class="form-label">Adresse email</label>
                    <input required type="email" class="form-control" id="input-email" name="email">
                </div>
                <div class="mb-3 element-form">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input required type="password" class="form-control" id="password" name="password" onkeyup="check();">
                </div>
                <div class="mb-3 element-form">
                    <label for="password" class="form-label">Confirmation du mot de passe</label>
                    <input required type="password" class="form-control" id="password-confirmation" name="confirmation" onkeyup="check();">
                    <span id="message"></span>
                </div>
                <button type="submit" class="btn btn-connect w-45" id="submit">S'inscrire</button>
            </form>
        </div>
    </div>
</section>