{{!--
    PASSWORD SECTION: FORM
--}}
<section id="password">
    <form action="/password" method="post" class="container mb-20">
        <div class="row">
            <div class="connect-title">
                <h2>Changer de mot de passe</h2>
            </div>
            {{#if mailSend }}
            <h6>Votre mail a bien été envoyé à l'adresse demandée</h6>
            {{/if }}
            {{#if dontExist }}
            <h6>Ce mail n'est pas utilisé</h6>
            {{/if }}
            <div class="col-md-12">
                <div class="connection d-flex flex-column align-items-center">
                    <div class="mb-3 element-form">
                        <label for="input-email" class="form-label">Adresse email de récupération</label>
                        <input type="email" class="form-control" id="input-username" placeholder="Email" name="email">
                    </div>
                    <div class="row mb-3">
                        <button type="submit" class="btn btn-full">Envoyer un email</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>