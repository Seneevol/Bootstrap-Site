{{!--
    COMMENT DELETION MODAL
--}}
<div class="modal fade" id="delete-comment" tabindex="-1" aria-labelledby="delete-comment-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supprimer un commentaire</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Voulez-vous vraiment supprimer le commentaire ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Non</button>
                <button type="button" class="btn btn-on">Oui</button>
            </div>
        </div>
    </div>
</div>