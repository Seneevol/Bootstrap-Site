{{!--
VERIF ARTICLE MODAL
--}}
{{#if isVerify }}
<div class="modal fade" id="verifarticle{{ this.id }}" tabindex="-1" aria-labelledby="banarticlelabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bannir un article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Voulez-vous vraiment cacher cet article ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Non</button>
                <form action="/admin/blog/ban/{{ this.id }}?_method=PUT" method="post">
                    <button type="submit" class="btn btn-on">Oui</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="modal fade" id="banarticle{{ this.id }}" tabindex="-1" aria-labelledby="banarticlelabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">VÃ©rifier un article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Voulez-vous vraiment accepter cet article ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Non</button>
                <form action="/admin/blog/verify/{{ this.id }}?_method=PUT" method="post">
                    <button type="submit" class="btn btn-on">Oui</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if }}