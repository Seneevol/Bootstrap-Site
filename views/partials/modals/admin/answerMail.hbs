<div class="modal fade" id="mail-send" tabindex="-1" aria-labelledby="mail-sendlabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Répondre à un mail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row img-mail-area mb-3">
                        <img src="assets/images/comments/account.jpg" class="rounded-circle" alt="...">
                    </div>
                </div>
                <textarea class="mail-area" name="" id="" cols="45" rows="20"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-on">Envoyer</button>
            </div>
        </div>
    </div>
</div>