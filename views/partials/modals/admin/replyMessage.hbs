{{!--
REPLY MESSAGE MODAL
--}}
<div class="modal fade" id="reply-mail{{ this.id }}" tabindex="-1" aria-labelledby="replymaillabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">RÃ©pondre au message de {{ this.name }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>{{ this.message }}</p>
                <textarea name="message" id="reply" cols="30" rows="10"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Non</button>
                <form action="/message/{{ this.id }}" method="post">
                    <button type="submit" class="btn btn-on">Oui</button>
                </form>
            </div>
        </div>
    </div>
</div>