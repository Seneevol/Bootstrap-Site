{{!--
DELETE ARTICLE MODAL
--}}
<div class="modal fade" id="deletearticle{{ this.id }}" tabindex="-1" aria-labelledby="deletearticlelabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supprimer un article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Voulez-vous vraiment supprimer l'article ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-off" data-bs-dismiss="modal">Non</button>
                <form action="/admin/blog/{{ this.id }}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-on">Oui</button>
                </form>
            </div>
        </div>
    </div>
</div>