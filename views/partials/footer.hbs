<footer class="shadow-lg">
    <div class="container footer">
        <div class="row">
            <div class="col-md-4 text-start mt-3">
                <h6>Se repérer:</h6>
                <ul>
                    <li><a class="footer-nav text-start" href="/blog">Blog</a></li>
                    <li><a class="" href="/contact">Contact</a></li>
                    {{#if isAdmin }}
                    <li><a class="" href="/admin">Admin</a></li>
                    {{/if }}
                    {{#unless user }}
                    <li><a class="" href="/connect">Connexion</a></li>
                    {{/unless }}
                </ul>
            </div>
            <div class="col-md-4">
                <form action="/home" method="post" class="box-newsteller mt-4">
                    <label for="">S'inscrire à la newsteller:</label>
                    <div>
                        <input id="newsteller" type="email" name="mailNews" class="newsteller"
                            placeholder="Entrez votre mail...">
                    </div>
                    <button type="submit">Envoyer</button>
                </form>
            </div>
            <div class="col-md-4 socials mt-3">
                <a href=""><i class="fab fa-twitter"></i></a>
                <a href=""><i class="fab fa-discord"></i></a>
                <a href=""><i class="fab fa-youtube"></i></a>
                <div>
                    <a href="/home"><img src="/images/logo.png" class="logo-footer mx-auto" alt=""></a>
                </div>
            </div>
        </div>
        <p class="copyright">Nakad - 2021. <a href="">Mentions légales</a></p>
    </div>
</footer>

