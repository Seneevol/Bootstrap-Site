{{!--
    HOME CARD LIST
--}}


<section id="section-cards">
    <div class="container">
        <div class="row">
            <div class="section-cards-title">
                <h2>Articles r√©cents</h2>
            </div>
            <div class="row row-cols-lg-3 g-3 mx-auto">
                {{#each dbArticle }}
                <div class="col">
                    <a href="/blog/{{ this.articlename }}/{{ this.id }}" class="card-link">
                        <div class="card" style="width: 18rem;">
                            <img src="/upload/articles/{{ image }}" alt="">
                            <div class="card-body">
                                <h5 class="card-title">{{ articlename }}</h5>
                                <p class="card-text">{{ content }}</p>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each }}
            </div>
            <div class="row">
                <div class="col-md-12 text-center p-3">
                    <a href="/blog" class="more-cards mt-3"><i class="fas fa-plus"> Voir plus d'articles...</i></a>
                </div>
            </div>
        </div>
    </div>
</section>