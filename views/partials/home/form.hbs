{{!--
HOME CONTACT FORM
--}}
<section id="section-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Contact</h2>
            </div>
            {{#if mailSend }}
            <h5>Votre mail a bien été envoyé!</h5>
            {{/if }}
            <form action="/home" method="post" class="col-md-6">
                <div class="contact-form">
                    <label for="name">Nom:</label><br>
                    <input type="text" name="name" class="contact-msg" placeholder="Entrez votre nom" required>
                </div>
                <div class="contact-form">
                    <label for="email">Email:</label><br>
                    <input type="email" id="email" name="email" placeholder="Entrez une adresse email"
                        class="contact-msg" required>
                </div>
                <div class="contact-form">
                    <label for="message">Votre message:</label><br>
                    <textarea name="message" id="msg" class="contact-msg" rows="3" required></textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-form" type="submit">Envoyer</button>
                </div>
            </form>
            <div class="col-md-6">
                <div class="contact-data">
                    <div class="phone">
                        <p><i class="fas fa-phone"></i>01.02.03.04.05</p>
                    </div>
                </div>
                <div class="contact-data">
                    <div class="address">
                        <p><i class="fas fa-map-marker"></i>Adresse random, 12345 Pays</p>
                    </div>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <img src="/images/logoBig.webp" class="img-fluid logoContactHome mt-3" alt="...">
                </div>
            </div>
        </div>
    </div>
</section>